{
	"id": "user",
	"data": {
		"list": ["name", "email"],
		"load": "*",
		"save": "*",
		"schema": {
			"id": "/user",
			"type": "object",
			"properties": {
				"auth.id": {
					"title": "Account",
					"$ref": "/auth/id"
				},
				"role": {
					"title": "Roles",
					"type": "array",
					"items": {"type": "string", "maxLength": 50, "required": true }
				},
				"roller": {
					"title": "Rollers",
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"blades": { "type": "integer" },
							"skates": {
								"type": "object",
								"properties": {
									"strap": { "type": "string" },
									"boot": { "type": "string" }
								}
							},
							"cheker": {
								"title": "Blast Off",
								"$ref": "/chinko/id"
							},
							"wheels": {
								"title": "Wheels",
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"front": { "type": "number" },
										"center": { "type": "array", "items": { "type": "object", "properties": {"one": {"type":"string"}, "two": {"type":"string"}, "three": {"type":"string"} } } },
										"rear": { "type": "number" }
									}
								}
							}
						}
					}
				},
				"name": {
					"title": "Name",
					"type": "string",
					"minLength": 0,
					"maxLength": 255,
					"required": true
				},
				"email": {
					"title": "Email Address",
					"type": "string",
					"minLength": 16,
					"maxLength": 255
				},
				"phone": {
					"title": "Phone Number",
					"type": "string",
					"minLength": 0,
					"maxLength": 25
				},
				"test": {
					"title": "Test",
					"type": "object",
					"properties": {
						"check": {
							"title": "Check",
							"type": "integer"
						},
						"cheese": {
							"title": "Cheese",
							"type": "string",
							"minLength": 0,
							"maxLength": 25
						},
						"choose": {
							"title": "Choose",
							"type": "object",
							"properties": {
								"life": {
									"title": "Life",
									"type": "string",
									"required": true,
									"minLength": 42
								},
								"death": {
									"title": "Death",
									"type": "boolean"
								},
								"existence": {
									"title": "Existence",
									"type": "object",
									"properties": {
										"what": {
											"title": "What",
											"type": "number"
										},
										"ever": {
											"title": "Ever",
											"type": "boolean"
										}

									}
								}
							}
						}
					}
				}
			}
		}
	},
	"database": "*",
	"schema": {
		"id": "/user",
		"type": "object",
		"properties": {
			"auth_id": {
				"title": "Account",
				"$ref": "/auth/id"
			},
			"role": {
				"title": "Roles",
				"type": "array",
				"items": {"type": "string"}
			},
			"name": {
				"title": "Name",
				"type": "string",
				"minLength": 0,
				"maxLength": 255
			},
			"email": {
				"title": "Email Address",
				"type": "string",
				"minLength": 16,
				"maxLength": 255
			},
			"phone": {
				"title": "Phone Number",
				"type": "string",
				"minLength": 0,
				"maxLength": 25
			}
		}
	},
	"routes": {
		"/": {
			"callback": "list",
			"methods": { "GET": true, "POST": true }
		},
		"/:id": {
			"callback": "profile",
			"methods": { "GET": true, "PUT": true },
			"form": [
				{ "key": "name", "placeholder": "Full Name" },
				{ "key": "email", "placeholder": "Email address" },
				{ "key": "phone", "placeholder": "Phone number" },
				{ "type": "section", "htmlClass": "btn-group inline-btn-group", "items": [
						{ "type": "submit", "style": "btn-primary", "title": "Save" },
						{ "type": "button", "style": "btn-warning", "title": "Reset", "onClick": "reset()" }
				]}
			]
		}
	},
	"screens": {
		"*": {
			"nav": [
				{ "type": "link",
					"path": "/admin/user",
					"title": "User Admin",
					"access": ["admin"]
				}
			]

		},
		"/user*": {
			"nav": [
				{ "type": "link",
					"path": "/user",
					"title": "View Profile",
					"access": ["user"]
				},
				{ "type": "link",
					"path": "/user/edit",
					"title": "Edit Profile",
					"access": ["user"]
				}
			]
		},
		"/user/:user_id<\\d+>?/:action<view|edit>?": {
			"page": [
				{ "type": "widget",
					"content": "tn-user",
					"args": {"id": ":user_id?!auth_id", "state": ":action?view"},
					"access": ["user"]
				}
			]
		},
		"/admin": {
			"page": [
				{ "type": "widget",
					"content": "tn-user-admin",
					"access": ["admin"]
				}
			]
		},
		"/admin/user*": {
			"tabs": [
				{ "type": "widget",
					"content": "tn-tabs",
					"args": {"actions": {"/admin/user": "Manage's Users", "/admin/user/add": "Add User"}},
					"access": ["admin"]
				}
			],
			"page": [
				{ "type": "widget",
					"content": "tn-user-list",
					"access": ["admin"]
				}
			]
		},
		"/admin/user/:user_id<\\d+>": {
			"page": [
				{ "type": "widget",
					"content": "tn-user",
					"args": {"id": ":user_id"},
					"access": ["admin"]
				}
			]
		}
	}
}